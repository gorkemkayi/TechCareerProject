@model ProductViewModel
@{
}
<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" type="text" asp-for="Name" />        
    </div>

    <div class="form-group mt-3">
        <label asp-for="CategoryID">Kategori ID</label>
        @*<input class="form-control" type="text" asp-for="CategoryID" />  *@  
        <select class="form-control" asp-for="CategoryID" asp-items="Model.Categories">
            <option value="">-- Kategori Seçin --</option>
        </select>
    </div>


    <div class="form-group mt-3">
        <label asp-for="Image">Resim</label>
        <input class="form-control-file" type="file" name="file" asp-for="Image" />
    </div>

    <input type="submit" value="Ekle" />

</form>

