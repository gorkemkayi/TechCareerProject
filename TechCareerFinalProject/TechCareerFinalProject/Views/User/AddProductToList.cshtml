@{
}

<form asp-action="AddProductToList" method="post">
    <input type="hidden" asp-for="ListId" />
    <div class="form-group">
        <label>Ürün Seç</label>
        @Html.DropDownListFor(model => model.SelectedProductId, Model.ProductList, "Seçiniz", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription">Ürün Açıklaması</label>
        <textarea class="form-control" asp-for="ProductDescription"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
