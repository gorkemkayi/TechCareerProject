@using TechCareerFinalProject.Models
@model List<Category>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Kategori ID</th>
            <th>Kategori Adı</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td><a class="btn btn-secondary" asp-action="EditCategory" asp-route-id="@item.ID">Düzenle</a></td>
                <td><a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@item.ID">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/AddCategory" class="btn btn-primary">Kategori Ekle</a>